<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blogPost.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blogPost.image %>" alt="">
            <div class="content">
                <span><%= blogPost.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- blogPost.body %></p>
            </div>
            <a href="/blog/<%= blogPost._id %>/edit" class="ui blue basic button">Update</a>
            <form action="/blog/<%= blogPost._id %>?_method=DELETE" method="POST" id="delete">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>

